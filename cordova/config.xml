<?xml version='1.0' encoding='utf-8'?>
<widget id="backapp.driveo.m-w.solutions" version="0.0.40" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DRIVEO Back-office</name>
    <description>
        Driveo back-office application. 
    </description>
    <author email="enguer@enguer.Com" href="http://www.m-w.solutions">
        M-W.solutions Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.CameraLauncher" />
        <param name="ios-package" value="CDVCamera" />
    </feature>
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-targetSdkVersion" value="19" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="xwalkVersion" value="17+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
</widget>
